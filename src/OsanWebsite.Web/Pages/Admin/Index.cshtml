@page "/admin"
@model OsanWebsite.Web.Pages.Admin.IndexModel

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Manager";
    string firstName = User.Claims.Where(c => c.Type == "given_name").Single().Value;
    string lastName = User.Claims.Where(c => c.Type == "family_name").Single().Value;
}

<div id="account" style="position:fixed; top:0px; right: 0px; width: 150px; height: 70px; display: flex; align-items:flex-end; justify-content:center; padding-right: 15px; color: white; font-size: 9pt;flex-direction:column;">
    <span><strong>@firstName @lastName</strong></span>
    <a href="/account/signout" style="color: white">Déconnexion</a>
</div>

<component type="typeof(OsanWebsite.Web.Components.Admin.AdminPage)" render-mode="Server" />

@section Scripts {
    <script src="_framework/blazor.server.js"></script>
}
